Checks: >
  clang-analyzer-*,
  cppcoreguidelines-*,
  modernize-*,
  performance-*,
  readability-*,
  bugprone-*,
  hicpp-*,
  portability-*,
  misc-*

WarningsAsErrors: '*'

CheckOptions:
  - key: modernize-use-nullptr.NullMacros
    value: 'NULL'
  - key: readability-identifier-naming.VariableCase
    value: lower_case
  - key: readability-identifier-naming.ClassCase
    value: CamelCase
  - key: readability-identifier-naming.FunctionCase
    value: camelBack
  - key: cppcoreguidelines-pro-type-vararg.check-printf
    value: '0'
FormatStyle: file
HeaderFilterRegex: 'src/|include/'
AnalyzeTemporaryDtors: true
UseColor: true
---

